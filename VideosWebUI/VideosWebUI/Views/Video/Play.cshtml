@model VideosWebUI.Models.Video

@{
    ViewData["Title"] = "Play Video";
    string baseApiUri = TempData["BaseApiUri"]?.ToString();
}

<h1>Play Video</h1>

<video width="100%" controls>
    <source src="@Url.Content(baseApiUri + "api/Video/" + Model.FileName)" type="video/mp4">
    Your browser does not support the video tag.
</video>
<br />
<a asp-action="Index">Back to List</a>
